<div class="top">
  <div class="top__container">
    <div class="sign">
      <div class="sign__top">
        <p>ログイン</p>
      </div>
      <div class="sign__container">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, placeholder:"メールアドレス", autofocus: true, autocomplete: "email",class: "sign__container--input" %>
          </div>

          <div class="field login__container--input">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, placeholder:"パスワード", autocomplete: "current-password",class: "sign__container--input" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field sign__container--rememberable">
              <%= f.check_box :remember_me %>
              <%= f.label :ログインしたままにする %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class:"btn" %>
          </div>
          <div class="actions">
            <%= f.submit "かんたんログイン", class:"btn easybtn" %>
          </div>
        <% end %>

        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "新規登録", new_registration_path(resource_name), class:"sign__container--registration" %><br />
        <% end %>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name),class:"sign__container--recover" %>
        <% end %>
      </div>
    </div>
    <div class="intro">
    </div>
  </div>
</div>