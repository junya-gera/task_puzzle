<div class="top">
  <div class="top__container">
    <div class="sign">
      <div class="sign__top">
        <p>新規登録</p>
      </div>
      <div class="sign__container">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <div class="field">
            <%= f.label :名前 %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name",class: "sign__container--input" %>
          </div>

          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "sign__container--input" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password",class: "sign__container--input" %>
          </div>

          <div class="field">
            <%= f.label :パスワード確認 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "sign__container--input" %>
          </div>

          <div class="field">
            <%= f.label :画像を選択して下さい %><br />
            <%= f.file_field :image,class: "sign__container--input" %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録", class:"btn" %>
          </div>
        <% end %>
        </div>
    </div>
    <div class="intro">
    </div>
  </div>
</div>

